---
const skills = [
	"HTML",
	"CSS",
	"JavaScript",
	"TypeScript",
	"Dart",
	"Python",
	"Scala",
	"Java",
	"Kotlin",
	"Swift",
	"C",
	"C#",
	"Rust",
	"Lua",
	"SQL",
	"MongoDB",
	"Node",
	"Express.js",
	"React",
	"Streamlit",
	"Flutter",
	"Tailwind",
	"SwiftUI",
	".NET",
	"Svelte",
	"Astro",
	"Drizzle",
	"Figma",
	"Git",
	"Linux",
	"Docker",
	"CI/CD",
];
---

<section>
	<h2 class="text-3xl font-bold mb-4 text-primary font-display">
		Technical Skills
	</h2>
	<div class="flex flex-wrap gap-2">
		{
			skills.map((skill) => (
				<span class="bg-dark text-gray px-3 py-1 rounded-full font-semibold">
					{skill}
				</span>
			))
		}
	</div>
</section>
